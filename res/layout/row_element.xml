        <TextView
                android:id="@+id/text11"
                android:text="test"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        <TextView
                android:id="@+id/text12"
                android:text="test2"
                android:textColor="#6699CC"
                android:layout_width="wrap_content"
